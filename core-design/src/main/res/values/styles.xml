<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.PinApp" />

    <style name="AppTheme.EditText">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="AppTheme.SubtitleTextAppearance">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.SubtitleTextAppearance.Medium">
        <item name="android:textSize">@dimen/text_medium_big</item>
    </style>

    <style name="AppTheme.TitleTextAppearance">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="AppTheme.TitleTextAppearance.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.TitleTextAppearance.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="dialogCornerRadius">@dimen/corner_radius</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DialogTitle">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="AppTheme.DialogMessage">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/AppTheme.SubtitleTextAppearance.Medium</item>
        <item name="android:backgroundTint">#FAFAFA</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="PrimaryButton.Big">
        <item name="android:textAppearance">@style/AppTheme.TitleTextAppearance.Black</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@android:color/black</item>
<!--        <item name="android:drawableTint">@color/red</item>-->
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/AppTheme.TitleTextAppearance.Black</item>
    </style>

</resources>